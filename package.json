{
  "name": "broilerplate-electron",
  "version": "1.0.0",
  "description": "A simple react+electron boilerplate.",
  "main": "index.js",
  "scripts": {
    "test": "xo && ava -v",
    "dev": "concurrently --names \"main,webpack,ava,xo\" \"electron -r babel-register .\" \"webpack --mode=\"development\" --watch\" \"ava --verbose --watch\" \"onchange '*.js' -i -- xo\"",
    "build": "webpack --mode=\"production\"",
    "start": "babel-node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/supertassu/broilerplate-electron.git"
  },
  "author": "tassu <hello@tassu.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/supertassu/broilerplate-electron/issues"
  },
  "homepage": "https://github.com/supertassu/broilerplate-electron#readme",
  "devDependencies": {
    "ava": "^1.0.0-beta.3",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.11",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.7.0",
    "style-loader": "^0.20.3",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "xo": "^0.20.3"
  },
  "dependencies": {
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "electron": "1.8.4",
    "onchange": "^3.3.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "import/no-unassigned-import": {
        "allow": [
          "**/*.css"
        ]
      }
    }
  }
}
